<% content_for :title, t('.title')%>
<div class="board-background">
  <h3 class='text-center pt-5 board-title mx-auto fw-bold'><%= t('.title') %></h3>
  <div class="container">
    <div class="row">
      <% if @dishes.present? %>
        <%= render @dishes %>
      <% else %>
        <p><%= t('.no_data') %></p>
      <% end %>
      <div class='mt-4'>
        <%= paginate @dishes %>
      </div>
    </div>
  </div>
</div>