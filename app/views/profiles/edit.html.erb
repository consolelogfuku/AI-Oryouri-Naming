<div class="container text-center">
  <div class="my-5"><%= image_tag 'robot.svg', class: 'rounded-circle profile-icon' ,size: '300x300' %></div>
    <%= form_with model: @user, url: profile_path do |f| %>
      <div class="row">
        <div class="col-3 mx-auto">
          <%= f.label :name, class:'mb-2' %>
          <%= f.text_field :name, class:'form-control'%>
        </div>
      </div>
      <div class="row">
        <div class="col-3 mx-auto">
          <%= f.label :email, class:'mt-3 mb-2' %>
          <%= f.email_field :email, class:'form-control'%>
        </div>
      </div>
      <%= f.submit t('defaults.update') ,class:'btn btn-primary mt-4 mb-5' %>
    <% end %>
  </div>
</div>